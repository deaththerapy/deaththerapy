	body
		// Navigation.
		a#menu-toggle.btn.btn-dark.btn-lg.toggle(href='#'): i.fa.fa-bars
		nav#sidebar-wrapper
			ul.sidebar-nav
				a#menu-close.btn.btn-light.btn-lg.pull-right.toggle(href='#'): i.fa.fa-times
				li.sidebar-brand: a(href='#top' onclick='$("#menu-close").click();') Death Therapy
				li: a(href='#top' onclick='$("#menu-close").click();') Home
				li: a(href='#about' onclick='$("#menu-close").click();') About
				li: a(href='#services' onclick='$("#menu-close").click();') Services
				li: a(href='#portfolio' onclick='$("#menu-close").click();') Portfolio
				li: a(href='#contact' onclick='$("#menu-close").click();') Contact

		// Header.
		header#top.header: .text-vertical-center
				h1 Death Therapy
				h3 The best site ever
				br
				a.btn.btn-dark.btn-lg(href='#about') Find Out More

		// About.
		section#about.about: .container: .row: .col-lg-12.text-center
						h2 The perfect cure
						p.lead Thanks Rob for the art!

		// Services
		section#services.services.bg-primary: .container: .row.text-center: .col-lg-10.col-lg-offset-1
						h2 Our Services
						hr.small
						.row
							for i in [1,2,3,4]
								.col-md-3.col-sm-6: .service-item
										span.fa-stack.fa-4x
											i.fa.fa-circle.fa-stack-2x
											i.fa.fa-compass.fa-stack-1x.text-primary
										h4: strong Service Name
										p Lorum somthin' er other.
										a.btn.btn-light(href='#') Learn More
		// Callout
		aside.callout: .text-vertical-center: h1 Vertically Centered Text

		// Portfolio
		section#portfolio.portfolio: .container: .row: .col-lg-10.col-lg-offset-1.text-center
						h2 Our Work
						hr.small
						.row
							for i in [1,2,3,4]
								.col-md-6: .portfolio-item: a(href='#')
											img.img-portfolio.img-responsive(src="img/portfolio-#{i}.jpg")
						a.btn.btn-dark(href='#') View More Items

		// Call To Action.
		aside.call-to-action.bg-primary: .container: .row: .col-lg.text-center
						h3 The buttons below are impossible to resist.
						a.btn.btn-lg.btn-light(href='#') Click Me!
						a.btn.btn-lg.btn-dark(href='#') Look at Me!

		// Footer.
		footer: .container: .row: .col-lg-10.col-lg-offset-1.text-center
						h4: strong Death Therapy
						p 123 Fake St #[br]St. Louis, MO 12345
						ul.list-unstyled
							li
								i.fa.fa-phone.fa-fw
								| (123) 456-7890
							li
								i.fa.fa-envelope-o.fa-fw
								a(href='mailto:asd@asd.com') asd@asd.com
						br
						ul.list-inline
							li: a(href='#'): i.fa.fa-facebook.fa-fw.fa-3x
							li: a(href='#'): i.fa.fa-twitter.fa-fw.fa-3x
							li: a(href='#'): i.fa.fa-dribbble.fa-fw.fa-3x
						hr.small
						p.text-muted Copyright &copy; Your Website #{new Date().getFullYear()}

		script(src='js/jquery.js')
		script(src='js/bootstrap.min.js')
		script.
			$("#menu-close").click(function (e) {
				e.preventDefault();
				$("#sidebar-wrapper").toggleClass("active");
			});

			$("#menu-toggle").click(function(e) {
				e.preventDefault();
				$("#sidebar-wrapper").toggleClass("active");
			});

			$(function () {
				$('a[href*=#]:not([href=#])').click(function() {
					if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') 
					|| location.hostname == this.hostname) {
						var target = $(this.hash);
						target = target.length 
						       ? target 
									 : $('[name=' + this.hash.slice(1) + ']');
						if (target.length) {
							$('html,body').animate({
								scrollTop: target.offset().top
							}, 1000);
							return false;
						}
					}
				});
			});
